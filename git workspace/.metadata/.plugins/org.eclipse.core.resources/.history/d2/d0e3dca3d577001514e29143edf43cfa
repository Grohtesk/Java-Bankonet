package command;

import java.util.List;
import java.util.Scanner;

import com.bankonet.Client;

import bankonet.metier.ClientService;

public class RechercheClientParPrenomCommand extends IhmCommand {
	
	ClientService clientService;
	public RechercheClientParPrenomCommand(ClientService clientService) {
		this.clientService=clientService;
	}

	@Override
	public int getInt() {
		return 5;
	}

	@Override
	public String getLibelle() {
		return "Rechercher une personne suivant son prénom";
	}

	@Override
	public void execute() {
		System.out.println("Entrez un nom");
		Scanner sc1=new Scanner(System.in);
		List<Client> clients=clientService.getClientByName(sc1.nextLine());
		for (Client client :clients) {
			System.out.println(client);
		}
//		sc1.close();
	}

}
