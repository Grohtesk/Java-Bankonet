package command;

import java.util.ArrayList;

import com.bankonet.Client;

import bankonet.metier.ClientService;

public class ListeClientsCommand extends IhmCommand {

	@Override
	public int getInt() {
		// TODO Auto-generated method stub
		return 2;
	}

	@Override
	public String getLibelle() {
		// TODO Auto-generated method stub
		return "Affiche la liste des clients";
	}

	@Override
	public void execute() {
		ClientService serviceClient = new ClientService();
		System.out.println("***** Liste des clients *****");
		
		ArrayList<Client> listClient=serviceClient.getClients();
		
		for (Client client : listClient) {
	    	System.out.println(client);
		}
		menu();
	}
	
	

}
