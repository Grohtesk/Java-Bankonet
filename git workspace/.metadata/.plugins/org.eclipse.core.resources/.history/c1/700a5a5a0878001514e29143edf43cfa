package command;

import java.util.Scanner;

import bankonet.metier.CompteService;

public class AjouterCompteCompteCourantCommand extends IhmCommand {
	

	private Scanner sc;
	private CompteService compteService;

	public AjouterCompteCompteCourantCommand(Scanner sc, CompteService compteService) {
		this.sc = sc;
		this.compteService = compteService;
	}

	@Override
	public int getInt() {
		return 9;
	}

	@Override
	public String getLibelle() {
		return "Ajouter un compte courant à un client existant";
	}

	@Override
	public void execute() {
		System.out.println(this.getLibelle());
		
		sc.nextLine();
		
	}

	
}
